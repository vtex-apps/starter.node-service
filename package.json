{
  "name": "vtex-app-node-server-template",
  "version": "0.0.17",
  "scripts": {
    "start": "tsc && NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "dev": "tsc && NODE_ENV=development nodemon dist/index.js",
    "watch": "NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' src/index.ts",
    "debug": "tsc && NODE_ENV=development nodemon --inspect dist/index.js",
    "test": "NODE_ENV=test jest --no-cache",
    "lint": "eslint --fix src && prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@jest/types": "^27.0.6",
    "@koa/cors": "^3.1.0",
    "@vtex/api": "^6.45.6",
    "@vtex/clients": "^2.19.1",
    "axios": "^0.25.0",
    "dotenv": "^14.3.2",
    "graphql": "^15.5.1",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-graphql": "^0.9.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "koa-swagger-decorator": "^1.7.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-graphql": "^0.8.5",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.0.3",
    "@types/node": "^16.4.13",
    "@types/supertest": "^2.0.11",
    "@vtex/prettier-config": "^0.3.6",
    "@vtex/tsconfig": "^0.5.6",
    "eslint": "7.32.0",
    "eslint-config-vtex": "^14.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "prettier": "@vtex/prettier-config"
}
